{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "saju-astro-edge-v1",
  "title": "Saju Astro Edge Contract v1",
  "type": "object",
  "required": ["id", "source", "target", "relation", "domain", "confidence", "enabled", "version"],
  "properties": {
    "id": {
      "type": "string",
      "minLength": 1
    },
    "source": {
      "type": "string",
      "minLength": 1
    },
    "target": {
      "type": "string",
      "minLength": 1
    },
    "relation": {
      "type": "string",
      "minLength": 1
    },
    "domain": {
      "type": "string",
      "enum": ["saju", "astro", "cross"]
    },
    "weight": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    },
    "confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    },
    "polarity": {
      "type": "string",
      "enum": ["positive", "neutral", "negative", "mixed"]
    },
    "time_scope": {
      "type": "string"
    },
    "condition_expr": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "evidence_refs": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "rule_id": {
      "type": "string"
    },
    "enabled": {
      "type": "boolean"
    },
    "version": {
      "type": "string",
      "minLength": 1
    },
    "updated_at": {
      "type": "string"
    }
  },
  "additionalProperties": true
}
