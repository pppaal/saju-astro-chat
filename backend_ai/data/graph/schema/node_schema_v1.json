{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "saju-astro-node-v1",
  "title": "Saju Astro Node Contract v1",
  "type": "object",
  "required": ["id", "domain", "type", "label", "description", "status", "version"],
  "properties": {
    "id": {
      "type": "string",
      "minLength": 1
    },
    "domain": {
      "type": "string",
      "enum": ["saju", "astro", "cross"]
    },
    "type": {
      "type": "string",
      "minLength": 1
    },
    "label": {
      "type": "string",
      "minLength": 1
    },
    "label_ko": {
      "type": "string"
    },
    "label_en": {
      "type": "string"
    },
    "aliases": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "description": {
      "type": "string",
      "minLength": 1
    },
    "evidence_refs": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "quality_score": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    },
    "status": {
      "type": "string",
      "enum": ["active", "deprecated", "draft"]
    },
    "version": {
      "type": "string",
      "minLength": 1
    },
    "updated_at": {
      "type": "string"
    }
  },
  "additionalProperties": true
}
