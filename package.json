{
  "name": "saju-astro-chatbot",
  "version": "0.1.0",
  "private": true,
  "sideEffects": [
    "*.css"
  ],
  "scripts": {
    "postinstall": "prisma generate --config prisma.config.ts",
    "vercel-build": "prisma generate --config prisma.config.ts && prisma migrate deploy && next build",
    "dev": "next dev",
    "build": "next build",
    "build:webpack": "cross-env NEXT_PRIVATE_DISABLE_TURBOPACK=1 next build",
    "build:analyze": "ANALYZE=true next build",
    "start": "next start",
    "lint": "eslint . --ext .ts,.tsx,.js",
    "lint:fix": "eslint . --ext .ts,.tsx,.js --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,css}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,json,css}\"",
    "typecheck": "tsc -p tsconfig.json",
    "typecheck:watch": "tsc -p tsconfig.json --watch --noEmit",
    "test": "vitest run",
    "test:fast": "vitest run --exclude tests/components/ui-components.test.tsx --exclude tests/lib/modules-smoke.test.ts --exclude tests/lib/services-integration.test.ts",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "test:coverage:open": "vitest run --coverage && npx open-cli coverage/index.html",
    "test:a11y": "vitest run tests/a11y",
    "test:a11y:watch": "vitest watch tests/a11y",
    "test:e2e": "vitest run tests/e2e",
    "test:integration": "vitest run tests/integration",
    "test:integration:setup": "node -e \"console.log('Run: .\\\\scripts\\\\setup-test-db.ps1 (Windows) or bash scripts/setup-test-db.sh (Linux/Mac)')\"",
    "test:tarot": "vitest run tests/lib/Tarot",
    "test:destiny-map": "vitest run tests/destiny-map-api-smoke.test.ts tests/destiny-map-sanitize.test.ts tests/destinyCalendar.test.ts tests/lib/destiny-map/destinyCalendar.test.ts",
    "test:performance": "vitest run tests/performance/api-endpoints.test.ts --reporter=verbose",
    "test:performance:watch": "vitest watch tests/performance/api-endpoints.test.ts",
    "test:performance:check": "node tests/performance/check-server.js",
    "test:load:basic": "k6 run tests/performance/k6/basic-load.js",
    "test:load:stress": "k6 run tests/performance/k6/stress-test.js",
    "test:load:spike": "k6 run tests/performance/k6/spike-test.js",
    "db:migrate": "prisma migrate deploy",
    "db:status": "prisma migrate status",
    "db:studio": "prisma studio",
    "test:load:endurance": "k6 run tests/performance/k6/endurance-test.js",
    "test:load:realistic": "k6 run tests/performance/k6/realistic-scenario.js",
    "security:owasp": "node scripts/owasp-zap-baseline.mjs",
    "test:e2e:browser": "playwright test",
    "test:e2e:browser:ui": "playwright test --ui",
    "test:e2e:browser:headed": "playwright test --headed",
    "test:e2e:browser:debug": "playwright test --debug",
    "test:e2e:critical": "playwright test --config=playwright.ci.config.ts e2e/critical-flows",
    "test:e2e:critical:auto": "playwright test --config=playwright.critical.config.ts",
    "test:e2e:critical:ui": "playwright test --config=playwright.critical.config.ts --ui",
    "test:e2e:wait": "node scripts/wait-for-server.mjs",
    "test:e2e:auth": "playwright test e2e/critical-flows/01-registration-auth.spec.ts",
    "test:e2e:tarot": "playwright test e2e/critical-flows/02-tarot-reading.spec.ts",
    "test:e2e:saju": "playwright test e2e/critical-flows/03-saju-analysis.spec.ts",
    "test:e2e:compatibility": "playwright test e2e/critical-flows/04-compatibility-flow.spec.ts",
    "test:e2e:credits": "playwright test e2e/critical-flows/05-credit-management.spec.ts",
    "test:e2e:profile": "playwright test e2e/critical-flows/06-profile-management.spec.ts",
    "test:e2e:premium": "playwright test e2e/critical-flows/07-premium-subscription.spec.ts",
    "test:e2e:destiny": "playwright test e2e/critical-flows/08-destiny-features.spec.ts",
    "test:unit": "cross-env TS_NODE_COMPILER_OPTIONS={\"module\":\"commonjs\",\"jsx\":\"react-jsx\"} node -r ts-node/register --test tests/*.test.ts",
    "test:backend": "python -m pytest backend_ai/tests",
    "dev:astro": "ts-node -P tsconfig.scripts.json -r tsconfig-paths/register scripts/dev-astro.ts",
    "check:env": "node scripts/validate-env.js",
    "check:all": "npm run lint && npm run typecheck && npm test",
    "quality:check": "npm run lint && npm run typecheck && npm run test:coverage",
    "quality:report": "npm run test:coverage && npm run lint -- --format html --output-file lint-report.html",
    "migrate:logger": "node scripts/migrate-console-to-logger.js",
    "marketing:auto-post": "node scripts/auto-post-daily-fortune.mjs",
    "marketing:test": "node scripts/auto-post-daily-fortune.mjs --test",
    "mobile:sync": "npm run build && npx cap sync",
    "mobile:sync:android": "npm run build && npx cap sync android",
    "mobile:sync:ios": "npm run build && npx cap sync ios",
    "mobile:open:android": "npx cap open android",
    "mobile:open:ios": "npx cap open ios",
    "mobile:build": "npm run build && npx cap sync && npx cap open android",
    "security:audit": "npm audit --audit-level=high",
    "docs:generate": "npx tsx scripts/generate-openapi.ts",
    "prepare": "husky"
  },
  "overrides": {
    "node-gyp": "^10.0.1",
    "glob": "^10.4.7",
    "lodash": "^4.17.23",
    "hono": "^4.11.4",
    "diff": "^4.0.4",
    "tar": "^7.5.7",
    "swisseph": {
      "node-gyp": "^10.0.1"
    }
  },
  "dependencies": {
    "@ducanh2912/next-pwa": "^10.2.9",
    "@prisma/adapter-pg": "^7.3.0",
    "@prisma/client": "^7.3.0",
    "@radix-ui/react-slot": "^1.2.4",
    "@sentry/nextjs": "^10.38.0",
    "@upstash/redis": "^1.36.2",
    "@vercel/blob": "^2.1.0",
    "@vercel/speed-insights": "^1.3.1",
    "bcryptjs": "^2.4.3",
    "chart.js": "^4.5.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns-tz": "^3.2.0",
    "dayjs": "^1.11.19",
    "dompurify": "^3.3.1",
    "dotenv": "^17.2.4",
    "firebase": "^12.9.0",
    "framer-motion": "^12.33.0",
    "korean-lunar-calendar": "^0.3.6",
    "lru-cache": "^11.2.5",
    "lucide-react": "^0.563.0",
    "next": "^16.1.6",
    "next-auth": "^4.24.13",
    "pdf-lib": "^1.17.1",
    "pdfjs-dist": "^5.4.624",
    "pg": "^8.18.0",
    "qrcode.react": "^4.2.0",
    "react": "^19.2.4",
    "react-chartjs-2": "^5.3.1",
    "react-dom": "^19.2.4",
    "react-markdown": "^10.1.0",
    "remark-gfm": "^4.0.1",
    "replicate": "^1.4.0",
    "resend": "^6.9.1",
    "stripe": "^19.3.1",
    "swagger-ui-react": "^5.31.0",
    "swisseph": "^0.5.17",
    "tailwind-merge": "^3.4.0",
    "tz-lookup": "^6.1.25",
    "web-push": "^3.6.7",
    "zod": "^4.3.6"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@capacitor/android": "^8.0.2",
    "@capacitor/cli": "^8.0.2",
    "@capacitor/core": "^8.0.2",
    "@capacitor/ios": "^8.0.2",
    "@next/bundle-analyzer": "^16.1.6",
    "@playwright/test": "^1.58.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/dompurify": "^3.0.5",
    "@types/node": "^20.19.32",
    "@types/pg": "^8.16.0",
    "@types/react": "^19.2.13",
    "@types/react-dom": "^19.2.3",
    "@types/tz-lookup": "^6.1.2",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vitest/coverage-v8": "^3.2.4",
    "autoprefixer": "^10.4.24",
    "axe-core": "^4.11.1",
    "chalk": "^5.6.2",
    "cross-env": "^10.1.0",
    "eslint": "^9.39.2",
    "eslint-config-next": "^16.1.6",
    "eslint-config-prettier": "^10.1.8",
    "happy-dom": "^20.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "postcss": "^8.5.6",
    "prettier": "^3.8.1",
    "prisma": "^7.3.0",
    "tailwindcss": "^3.4.19",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^3.0.0",
    "web-vitals": "^5.1.0",
    "webpack": "^5.105.0"
  }
}
