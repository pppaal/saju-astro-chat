      "@/lib/numerology/*": ["src/lib/numerology/*"],
      "@/narrative/*": ["src/narrative/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "src/**/*",
    "**/*.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}