{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "allowImportingTsExtensions": false,
    "types": [
      "node",
      "next",
      "react",
      "react-dom"
    ],
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@/app/*": [
        "src/app/*"
      ],
      "@/components/*": [
        "src/components/*"
      ],
      "@/lib/*": [
        "src/lib/*"
      ],
      "@/lib/Saju/*": [
        "src/lib/Saju/*"
      ],
      "@/lib/Tarot/*": [
        "src/lib/Tarot/*"
      ],
      "@/lib/iChing/*": [
        "src/lib/iChing/*"
      ],
      "@/lib/astrology/*": [
        "src/lib/astrology/*"
      ],
      "@/lib/destiny-map/*": [
        "src/lib/destiny-map/*"
      ],
      "@/lib/numerology/*": [
        "src/lib/numerology/*"
      ],
      "@/narrative/*": [
        "src/narrative/*"
      ]
    }
  },
  "include": [
    "**/*.d.ts",
    "next-env.d.ts",
    "src/**/*",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
