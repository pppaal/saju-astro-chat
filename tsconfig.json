//tsconfig.json

{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,

    // âœ… ëª¨ë“ˆ ê´€ë ¨
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,

    // âœ… ì¤‘ìš”: import ì‹œ .ts í™•ìž¥ìž ë¶™ì´ì§€ ì•Šì•„ë„ ë¨
    "allowImportingTsExtensions": false,

    // âœ… íƒ€ìž… ì¸ì‹
    "types": ["node", "next", "react", "react-dom"],

    // âœ… íƒ€ìž… ë£¨íŠ¸ ì¶”ê°€ (pdf-lib ì„ ì–¸ í¬í•¨)
    "typeRoots": ["./node_modules/@types", "./src/types"],

    // âœ… Next.js í”ŒëŸ¬ê·¸ì¸
    "plugins": [{ "name": "next" }],

    // âœ… ê²½ë¡œ alias
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/app/*": ["src/app/*"],
      "@/components/*": ["src/components/*"],
      "@/lib/*": ["src/lib/*"],
      "@/lib/Saju/*": ["src/lib/Saju/*"],
      "@/lib/Tarot/*": ["src/lib/Tarot/*"],
      "@/lib/iChing/*": ["src/lib/iChing/*"],
      "@/lib/astrology/*": ["src/lib/astrology/*"],
